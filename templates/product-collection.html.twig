{% extends 'partials/base.html.twig' %}
{% block page_content %}
<main class="page page--product-collection">

	{# header #}
	{% include 'modular/content.html.twig' with {
		'content':'<h1>' ~ page.title ~ '</h1>' ~ page.content|raw,
		'align': 'center',
		'content_reveal': 'reveal transition-delay-100',
		'modular_class': 'product-collection-header', 'width': 'tight',
		'modular_margin': 'm-t_2'
	}%}

	{# Collection #}
	<section class="site m-t" data-reveal="reveal transition-delay-150">
		<div class="product__grid" data-paginate>
			{% for page in page.collection() %}
				{% include 'partials/product-item.html.twig' %}
			{% endfor %}
			{% include 'partials/pagination.html.twig' %}
		</div>
	</section>

</main>
{% endblock %}
