{% extends 'partials/base.html.twig' %}

{% block page_content %}
<section class="page page--product-collection">

	{# header #}
	{% include 'modular/content.html.twig' with {
		'content':'<h1>' ~ page.title ~ '</h1>',
		'align': 'center',
		'content_reveal': 'reveal transition-delay-100',
		'modular_class': 'm-t_2'}%}



	<div class="collection__wrapper site">
		<div class="collection__grid">
			{% for page in page.collection() %}

				<div class="collection__item">
					<div class="collection__item__image">
						{% include 'partials/img.html.twig' with {'image': page.media.images|first} %}
					</div>
					<div class="collection__item__title">{{ page.title }}</div>
					<div class="collection__item__price">{{ theme.price_prefix }} {{ page.header.price|number_format(2) }} {{ theme.price_suffix }}</div>
				</div>

			{% endfor %}
		</div>
	</div>

</section>
{% endblock %}
