{% extends '/partials/modular.html.twig' %}
{% set modular_name = 'content' %}
{% set content = content|default(page.content) %}
	
{% set align = align|default(page.header.align ?? 'left') %}
{%- set align -%}
{%- if align == 'left' -%}content--left
{%- elseif align == 'center' -%}content--center
{%- else -%}{{- align -}}
{%- endif -%}
{%- endset -%}

{% set width = width|default(page.header.width ?? 'site') %}
{%- set width -%}
{%- if width == 'tight' -%}tight
{%- elseif width == 'site' -%}site
{%- else -%}{{- width -}}
{%- endif -%}
{%- endset -%}

{% set limit_reveal = limit_reveal|default(page.header.limit_reveal) %}

{% block modular_content %}
	<div class="content__ctn {{ width }} {{ align }}" {% if not limit_reveal %}data-reveal{% endif %}>{{ content }}</div>
{% endblock %}
