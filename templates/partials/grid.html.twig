{% set fg_color = page.header.fg_color ?? theme.fg_color %}
{% set bg_color = page.header.bg_color ?? theme.bg_color %}
{% set rythm = rythm|default(page.header.rythm ?? 'rythm') %}
{% set columns = columns|default(page.header.columns) %}

<section class="grid site {{ rythm }}" columns="{{ columns }}" style="{% if bg_color %}--bg-color:{{ bg_color }};{% endif %}{% if fg_color %}--fg-color:{{ fg_color }};{% endif %}">
	{% for item in page.collection %}
		{{item.content}}
	{% endfor %}
</section>

