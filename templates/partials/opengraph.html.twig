{% set title = page.header.title %}
{% set image = page.media.images|first() %}
{% set description = page.summary|striptags %}

<meta property="og:title" content="{{ title }}" />
<meta property="og:type" content="website" />
<meta property="og:url" content="{{ page.url(true, true) }}" />
<meta property="og:image" content="{{ image.url(true, true) }}" />

<meta name="twitter:card" property="twitter:card" content="summary" />
<meta name="twitter:site" property="twitter:site" content="{{ base_url }}" />
<meta name="twitter:title" property="twitter:title" content="{{ title }}" />
<meta name="twitter:description" property="twitter:description" content="{{ description}}" />
<meta name="twitter:image" property="twitter:image" content="{{ image.url(true, true) }}" />